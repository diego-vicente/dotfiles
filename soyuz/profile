# .profile

# Set the basico
export LAPTOP=eDP1
export HDMI=DP3
export ETH_HOME=ens20u1u2
export ETH_WORK=enp0s20f0u5u4
export WLAN=wlp59s0
export TEMP_SENSOR=/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

# Include /sbin
export PATH=$PATH:/sbin

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi


# set up pyenv
export PYENV_ROOT="$HOME/utils/pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

# set up poetry
export PATH="$HOME/.poetry/bin:$PATH"
